APSF,V1,0,,-1,0,
// Find the brightest object in the list
//= Brightest Object

sub main()
	dim list as new ListWindow
	list.Heading(1) = "ID"
	list.Heading(2) = "Name"
	list.Heading(3,2) = "Mag"
	
	dim maxmag as double = 999.0
	dim maxid as string = ""
	dim maxname as string = ""
	for i as integer = 1 to Plan().nObjects
		dim a as APPlanObject = Plan().Obj(i)
		dim mag as double = a.Magnitude
		if mag < maxmag then
			maxmag = mag
			maxid = a.ID
			maxname = a.Name
		end if
	next
	
	list.Cell(1,1) = maxid
	list.Cell(1,2) = maxname
	list.Cell(1,3) = maxmag
end sub
